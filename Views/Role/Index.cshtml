@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Roles";
}

<h2>Roles</h2>

<p>
    <a href="@Url.Action("Create", "Role")" class="btn btn-primary">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Role", new { id = role.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Role", new { id = role.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
